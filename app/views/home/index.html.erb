<div class="container">

<form method="GET">
  <div class="form-group">
    <input type="text" class="form-control" name="query" placeholder="검색">
  </div>
</form>

<br/>

<div class="row">
  <div class="col-md-6">
    <table class="table" style="background-color:white">
      <thead class="bg-warning">
        <tr>
          <th>제목</th>
          <th>작성자</th>
          <th>기간</th>
        </tr>
      </thead>
      <tbody>
          <% @public.each_with_index do |post,i| %>
            <% if i < 5 %>
            <tr>
              <td><%= post.title %></td>
              <td><%= post.writer %></td>
              <td><%= post.period %></td>
            </tr>
          <% else %>
            <tr style="display:none;">
              <td><%= post.title %></td>
              <td><%= post.writer %></td>
              <td><%= post.period %></td>
            </tr>
          <% end %>
        <% end %>
        </tbody>
    </table>
